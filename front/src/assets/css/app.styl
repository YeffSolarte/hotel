@import "font-awesome.styl"
body
  background #f4f5f4
  font-size 14px
  font-family: 'Open Sans', sans-serif

header
  width 100%
  background #e8e8e3
  border-bottom 5px solid #243d78
  figure
    margin-left 2em
    img
      height 5em
      width auto

main
  width 100%
  margin 0 !important
  section
    max-width 1368px
    display block


.without_padding
  padding 0 !important


//  home styles
.hotel_item
  background white
  margin 2em 1em
  -webkit-box-shadow: 0px 2px 11px 3px rgba(209,209,209,1);
  -moz-box-shadow: 0px 2px 11px 3px rgba(209,209,209,1);
  box-shadow: 0px 2px 11px 3px rgba(209,209,209,1);
  & > div
    height 15em
    max-height 15em
  .item_description
    h4
      font-weight bold
      color #1179b3
    .item_star
      margin-bottom 10px
      span
        font-size 1.7em
        color #febb03
    .item_amenity
      float left
      margin 0 5px 10px 5px
      figure
        img
          width 1.7em
          height auto

  .item_image
    margin-top 15px
    text-align center
    figure
      max-width 17em
      height 95%
      margin 0 auto
      img
        width 100%
        height 100%

  .item_price
    & > div
      padding 0 0 0 5px
      border-left 1px dashed grey
      height 100%
      div
        text-align center
        margin 10px 0
        .item_price_text
          color #e16800
          font-size 2em
          font-weight bold

        button
          width 100%
          color white
          background #002979
@media screen and (max-width: 800px)
  body
    font-size 12px
  //  home styles
  .hotel_item
    max-height 45em
    & > div
      height initial !important
      max-height initial !important
    .item_price
      & > div
        border-top 1px dashed grey
        border-left none
  .item_image
    margin-top 15px
    figure
      max-width 27em !important
      height 100% !important
      img
        height auto !important

